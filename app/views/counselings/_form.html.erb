<script>
//for counseling-information
$(document).ready(function(){
  $("#button-counseling").click(function(){
    $("#counseling-div").show();
    $("#basic-div").hide();
    $("#contract-div").hide();
  });
});

//for basic-information
$(document).ready(function(){
  $("#button-basic").click(function(){
    $("#counseling-div").hide();
    $("#contract-div").hide();
    $("#basic-div").show();
  });
});

//for contract-information
$(document).ready(function(){
  $("#button-contract").click(function(){
    $("#counseling-div").hide();
    $("#basic-div").hide();
    $("#contract-div").show();
  });
});
</script>