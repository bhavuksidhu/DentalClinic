  <main class="flex-1 pb-8">

        <div class="max-w-6xl mx-auto mt-8 px-4 text-lg leading-6 font-medium text-gray-900 sm:px-6 lg:px-8">
        <!-- Search -->
        <%= link_to 'Create Patient', new_patient_path, class:"text-center mb-5 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500" %>
        
        <%= render 'search_form' %>
        <!-- Table -->
        <div class="flex flex-col">
          <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            
              <div class="shadow border-b border-gray-200 sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="underline bg-gray-50">
                    <tr>
                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :patient_number, 'Patient Number', default_order: :desc) %></th>
                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :first_name, 'First Name', default_order: :desc) %></th>
                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :last_name, 'Last Name', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :visit_route, 'Visit Route', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :dentist_id, 'Dentist', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :dentist_hygientist_id, 'Dentist Hygienist', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :treatment_coordinator_id,'Treatment Coordinator', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :panorama, 'Panorama', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :caries_check, 'Caries Check', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :course, 'Course', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :p_course, 'P Course', default_order: :desc) %></th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :created_at, 'First Visit', default_order: :desc) %></th>                     

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Next Treatment</th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Treatment</th>

                      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :note, 'Note', default_order: :desc) %></th>

                      <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Edit</span>
                      </th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">
                    <% @users.each do |user| %>
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= user.patient_number %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= user.first_name %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.last_name %></td>

                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.visit_route %></td>

                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.dentist.first_name %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.dentist_hygienist.first_name %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.treatment_coordinator.first_name %></td>

                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.panorama ? "Yes" : "NO" %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.caries_check ? "Yes" : "NO" %></td>

                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.course %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.p_course %></td>

                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.created_at.to_date %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.next_treatment %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.last_treatment %></td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= user.note %></td>

                      <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <%= link_to 'View', patient_path(user.id), class:"inline-flex items-center px-4 py-2 border border-cyan-300 shadow-sm text-sm font-medium rounded-md text-white bg-cyan-500 hover:bg-cyan-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500" %>
                      </td>
                    </tr>
                    <% end %>
                    <!-- More people... -->
                  </tbody>
                </table>
              </div>
          </div>
          <% if @pagy.count > 10 %>
            <div class="mt-5">
              <%== pagy_nav(@pagy) %>
            </div>          
          <% end %>
        </div>
        </div>
      </div>
    </main>


