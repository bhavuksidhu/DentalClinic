  <main class="flex-1 pb-8">
      <div class="max-w-6xl mx-auto mt-8 px-4 text-lg leading-6 font-medium text-gray-900 sm:px-6 lg:px-8">
        <!-- Search / Filter -->
        <%= render 'search_filter' %>
        <!-- New Appointment -->
        <%= render 'register_last_visit' %>
        
        <!-- Table -->
        <div class="flex flex-col">
          <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">          
            <div class="shadow border-b border-gray-200 sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("patient.Patient Number") %></th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("patient.Patient Name") %></th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("patient.Last Visit") %></th>
                     <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("patient.Last Visit(Updated)") %></th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                <% @patients.each do |patient| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= @patient_no + 1%></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= patient.patient_number %></td>     
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= patient.full_name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= patient.last_visit_updated %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= patient.last_visit_date if patient.audits.count > 2 %></td>
                  </tr>
                  <% @patient_no += 1 %>
                <% end %>
                    <!-- More people... -->
                </tbody>
              </table>
            </div>
          </div>
          <% if @pagy.count > 10 %>
            <div class="mt-5">
              <%== pagy_nav(@pagy) %>
            </div>          
          <% end %>
        </div>
      </div>
    </main>


