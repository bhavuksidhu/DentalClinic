<div id="<%= dom_id agent %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">First name:</strong>
    <%= agent.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last name:</strong>
    <%= agent.last_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= agent.phone %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this agent", agent, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this agent', edit_agent_path(agent), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
