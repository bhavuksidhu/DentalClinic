
<div class="container mx-auto h-screen flex flex-col justify-center items-center shadow-md">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class:"bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",class:"text-blue-500 hover:text-blue-700" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>